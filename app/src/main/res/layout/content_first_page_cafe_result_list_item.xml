<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:onClick="cafelistItemOnClick">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/cafe_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:textSize="0dp"
            android:text="asdasdasd"/>
        <ImageView
            android:id="@+id/first_page_cafe_result_list_item_img"
            android:layout_width="140dp"
            android:layout_height="100dp"
            android:src="@drawable/sample" />

        <TextView
            android:id="@+id/first_page_restaurant_result_list_item_title"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:text="Gloria Jeans Coffes"
            android:textColor="@color/cardview_dark_background"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/list_item_key_cuisine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="Coffee, Snacks" />

        <TextView
            android:id="@+id/list_item_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_item_key_cuisine"
            android:layout_marginBottom="10dp"
            android:paddingLeft="10dp"
            android:text="Road 24/a, Gulshan 1" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/restaurantStar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="10dp"
                android:src="@mipmap/ic_star" />

            <TextView
                android:id="@+id/list_item_ratingbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="5dp"
                android:textSize="16dp"
                android:text="4.5"
                android:textColor="@color/cardview_dark_background" />

            <TextView
                android:id="@+id/list_item_open_or_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/list_item_distance"
                android:layout_marginRight="12dp"
                android:layout_marginTop="5dp"
                android:textSize="16dp"
                android:text="Open"
                android:textColor="@color/colorPrimary" />

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
