<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/result_list_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".ResultActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:text="Search Result for :"
                    android:textColor="@color/cardview_light_background"
                    android:textSize="12dp"
                    android:textStyle="normal" />
                <TextView
                    android:id="@+id/search_query_text"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_margin="5dp"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/result_page_back_button"
                    android:text="Casual Dining Families with children Parking LuxuryDining Reservation outdoor kids zone washroom "
                    android:textColor="@color/cardview_light_background"
                    android:textSize="8dp"
                    android:textStyle="normal" />
            </LinearLayout>
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_result_layout" />

</LinearLayout>



