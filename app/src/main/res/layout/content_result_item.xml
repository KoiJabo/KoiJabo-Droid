<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:onClick="listItemOnClick">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/result_list_item_image"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:src="@drawable/sample" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/result_list_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:ellipsize="none"
                android:maxLines="3"
                android:scrollHorizontally="false"
                android:text="Gloria JeansCofasdasdasdasdasdasdasfes"
                android:textColor="@color/cardview_dark_background"
                android:textSize="22dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/result_list_item_key_cuisine"
                        android:layout_width="140dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="Coffee, Snacks"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/result_list_item_address"
                        android:layout_width="140dp"
                        android:layout_height="20dp"
                        android:layout_below="@+id/list_item_key_cuisine"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="Road 24/a, Gulshan 1"
                        android:textSize="16dp" />
                    <TextView
                        android:id="@+id/result_list_item_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/result_list_item_open_or_close"
                        android:layout_marginBottom="15dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="5dp"
                        android:text="200 meter away"
                        android:textColor="@color/cardview_dark_background"
                        android:textSize="16dp" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/restaurantStar"
                        android:layout_alignParentRight="true"

                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="35dp"
                        android:src="@mipmap/ic_star" />

                    <TextView
                        android:id="@+id/result_list_item_ratingbar"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="8dp"
                        android:text="4.5"
                        android:textColor="@color/cardview_dark_background"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/result_list_item_open_or_close"
                        android:layout_below="@+id/result_list_item_ratingbar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="12dp"
                        android:layout_marginTop="10dp"
                        android:text="Open"
                        android:textColor="@color/colorAccent"
                        android:textSize="22dp" />
                </RelativeLayout>


            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>
